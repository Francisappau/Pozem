
<div id="formContainer" class="flipInY">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

 <%= image_tag("loginmetal.png", size: "155x60", alt: "login", class:"loginlogo")%>
  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Email" %>
  </div>
<br>
  <div class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Log in", class:'button' %>
  </div>
<% end %>
<%= link_to "Forgot your password?", new_password_path(resource_name), class:"forgot" %>
<%- resource_class.omniauth_providers.each do |provider| %>
      <%-  if provider.to_s == "google_oauth2"%>
            <%= link_to image_tag("sign-in-with-google.png", :width => 50, :height => 50), user_omniauth_authorize_path(provider), class: "google-login" %><br />

          <%- elsif provider.to_s == "facebook"%>
            <%= link_to image_tag("login_with_facebook.png", :width => 50, :height => 50), user_omniauth_authorize_path(provider), class: "facebook-login" %><br />

        <%else%>
            <%= link_to "Sign in with #{provider.to_s.titleize}", user_omniauth_authorize_path(provider) %><br />
            <%end-%>
  <% end -%>
  
</div>


