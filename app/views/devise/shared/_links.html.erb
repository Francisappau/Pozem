<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class:"flipLink" %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class:"flipLink" %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class:"forgot" %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
      <%-  if provider.to_s == "google_oauth2"%>
            <%= link_to image_tag("sign-in-with-google.png", :width => 50, :height => 50), user_omniauth_authorize_path(provider), class: "google-login" %><br />

          <%- elsif provider.to_s == "facebook"%>
            <%= link_to image_tag("login_with_facebook.png", :width => 50, :height => 50), user_omniauth_authorize_path(provider), class: "facebook-login" %><br />

        <%else%>
            <%= link_to "Sign in with #{provider.to_s.titleize}", user_omniauth_authorize_path(provider) %><br />
            <%end-%>
  <% end -%>
<% end -%>

