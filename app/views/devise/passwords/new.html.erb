
<div id="formContainer" class="flipInY">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
<%= image_tag("reset.png", size: "155x60", alt: "Reset", class:"loginlogo")%>

  <div class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => 'Email', class: "reset" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "reset-pass button" %>
  </div>
<% end %>

</div>
